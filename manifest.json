{
  "manifest_version": 3,
  "name": "FocusFlow - Modern Pomodoro Timer",
  "version": "1.0.0",
  "description": "A modern, feature-rich Pomodoro timer with task management",
  "permissions": ["storage", "activeTab", "tabs", "alarms", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FocusFlow Timer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
